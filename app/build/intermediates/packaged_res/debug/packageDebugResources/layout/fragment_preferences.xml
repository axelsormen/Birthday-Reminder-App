<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
    android:id="@+id/preferencesTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Preferanser"
    android:textSize="24sp"
    android:textStyle="bold"
    android:layout_marginBottom="8dp"/>

    <Switch
    android:id="@+id/serviceToggle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Skru av/p책 tjeneste"
    android:layout_marginBottom="8dp"/>

    <TextView
    android:id="@+id/sendTimeLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="N책r p책 dagen skal meldingen sendes:"
    android:textSize="18sp"
    android:layout_marginBottom="8dp"/>

    <TimePicker
    android:id="@+id/sendTimePicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"/>

    <TextView
    android:id="@+id/messageLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Hva skal st책 i SMSen:"
    android:textSize="18sp"
    android:layout_marginBottom="8dp"/>

    <EditText
    android:id="@+id/defaultMessage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Gratulerer med dagen!"
    android:text="Gratulerer med dagen!"
    android:layout_marginBottom="8dp"/>

    <Button
    android:id="@+id/save"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500"
    android:drawablePadding="8dp"
    android:padding="12dp"
    android:text="Lagre"
    android:textColor="@android:color/white"
    android:textSize="18sp"
    android:layout_marginBottom="8dp"/>

    <Button
    android:id="@+id/backButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/purple_500"
    android:drawablePadding="8dp"
    android:padding="12dp"
    android:text="Tilbake"
    android:textColor="@android:color/white"
    android:textSize="18sp" />
    </LinearLayout>
